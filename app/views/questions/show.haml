.container
	%h1
		= link_to "Division #{@question.division.id}", division_path(@question.division.id)
		&raquo;
		= @question.question_text

	%p#notice
		= notice

	%p
		%strong Question type:
		= @question.question_type

	%p
		%strong Question choices:
		- if @question.question_choices.blank?
			No question choices.
		- else
			= @question.question_choices.join('<br />')
	%h2 Responses
	- if @question.responses.length > 0
	- else
		%p No responses.

	= link_to 'Edit', edit_question_path(@question)
	|
	= link_to 'Back', questions_path

